@model Home_task_bettingWebApp.Models.Transaction

<h1>Create Transaction</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="UserId">User:</label>
        <select asp-for="UserId" asp-items="@ViewBag.UserList" class="form-control">
            <option value="">-- Select User --</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount">Amount:</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TransactionTime">Transaction Time:</label>
        <input asp-for="TransactionTime" class="form-control" />
        <span asp-validation-for="TransactionTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index">Back to List</a>
</form>
