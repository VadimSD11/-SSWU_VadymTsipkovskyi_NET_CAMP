@model Home_task_bettingWebApp.Models.Transaction

<h1>Delete Transaction</h1>

<h3>Are you sure you want to delete this transaction?</h3>
<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Transaction ID</dt>
        <dd class="col-sm-10">@Model.TransactionId</dd>
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>
        <dt class="col-sm-2">Transaction Time</dt>
        <dd class="col-sm-10">@Model.TransactionTime</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.TransactionId">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
